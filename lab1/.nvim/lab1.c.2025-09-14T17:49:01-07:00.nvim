#define _GNU_SOURCE
#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
size_t nread;

int main() {
  char *buffer = NULL;
  size_t buffsize = 0;
  ssize_t nread;
  printf("Please enter some text: ");
  nread = getline(&buffer, &buffsize, stdin);

  if (nread == -1) {
    perror("getline");
    exit(EXIT_FAILURE);
  }
  printf("You entered: %s", buffer);
  free(buffer);
  return 0;
}
